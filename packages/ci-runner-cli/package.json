{
  "name": "@localci/ci-runner-cli",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "CLI runner package for ci-runner.",
  "bin": {
    "ci-runner": "./dist/cli.js"
  },
  "main": "./dist/cli.js",
  "types": "./dist/cli.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "node -e \"require('node:fs').rmSync('dist', { recursive: true, force: true })\"",
    "build": "vite build --config vite.config.ts && tsc -p tsconfig.build.json",
    "pretypecheck": "pnpm --filter @localci/ci-runner-core run build",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "pretest": "pnpm --filter @localci/ci-runner-core run build",
    "lint": "eslint \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "vitest run --config vitest.config.ts"
  },
  "dependencies": {
    "@localci/ci-runner-core": "workspace:*",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.19.0",
    "pnpm": ">=10.28.1"
  },
  "license": "MIT"
}
