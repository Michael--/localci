{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "types": ["node"],
    "tsBuildInfoFile": "./dist/.tsbuildinfo.build"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["test/**/*.ts", "src/**/*.test.ts"]
}
