{
  "name": "@localci/ci-runner-core",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "description": "Core execution engine for ci-runner.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "node -e \"require('node:fs').rmSync('dist', { recursive: true, force: true })\"",
    "build": "vite build && tsc -p tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "vitest run"
  },
  "engines": {
    "node": ">=20.19.0",
    "pnpm": ">=10.28.1"
  },
  "keywords": [
    "ci",
    "runner",
    "typescript"
  ],
  "license": "MIT"
}
