{
  "name": "@number10/ci-runner-vscode",
  "version": "0.2.0",
  "private": true,
  "description": "VS Code extension for ci-runner CLI.",
  "displayName": "CI Runner",
  "publisher": "number10",
  "homepage": "https://www.npmjs.com/package/@number10/ci-runner-cli",
  "bugs": {
    "email": "mr@number10.de"
  },
  "icon": "media/ci-runner.png",
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.90.0",
    "node": ">=20.19.0",
    "pnpm": ">=10.28.1"
  },
  "categories": [
    "Testing",
    "Other"
  ],
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "ciRunner.sidebar",
          "name": "CI Runner",
          "icon": "media/ci-runner.png"
        }
      ]
    },
    "commands": [
      {
        "command": "ciRunner.refresh",
        "title": "Refresh",
        "icon": {
          "id": "refresh"
        }
      },
      {
        "command": "ciRunner.runConfig",
        "title": "Run Config"
      },
      {
        "command": "ciRunner.runConfigWatch",
        "title": "Run Config (Watch)"
      },
      {
        "command": "ciRunner.runConfigFailFast",
        "title": "Run Config (Fail Fast)"
      },
      {
        "command": "ciRunner.runConfigDefault",
        "title": "Run Config (Default Profile)",
        "icon": {
          "id": "play"
        }
      },
      {
        "command": "ciRunner.stopConfig",
        "title": "Stop Config Run",
        "icon": {
          "id": "stop-circle"
        }
      },
      {
        "command": "ciRunner.stopAll",
        "title": "Stop All Runs",
        "icon": {
          "id": "debug-stop"
        }
      },
      {
        "command": "ciRunner.openOutput",
        "title": "Open Output",
        "icon": {
          "id": "output"
        }
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "ciRunner.runConfigDefault",
          "when": "view == ciRunner.sidebar && viewItem == ciRunnerTargetIdle",
          "group": "inline@1"
        },
        {
          "command": "ciRunner.stopConfig",
          "when": "view == ciRunner.sidebar && viewItem == ciRunnerTargetRunning",
          "group": "inline@1"
        }
      ],
      "view/title": [
        {
          "command": "ciRunner.refresh",
          "when": "view == ciRunner.sidebar",
          "group": "navigation@1"
        },
        {
          "command": "ciRunner.stopAll",
          "when": "view == ciRunner.sidebar",
          "group": "navigation@2"
        },
        {
          "command": "ciRunner.openOutput",
          "when": "view == ciRunner.sidebar",
          "group": "navigation@3"
        }
      ]
    },
    "configuration": {
      "title": "CI Runner",
      "properties": {
        "ciRunner.defaultConfigPath": {
          "type": "string",
          "default": "",
          "scope": "resource",
          "description": "Preferred relative config path in the workspace. When set, this config is listed first."
        },
        "ciRunner.defaultRunProfile": {
          "type": "string",
          "default": "standard",
          "enum": [
            "standard",
            "watch",
            "fail-fast"
          ],
          "scope": "resource",
          "description": "Run profile used when selecting a config node directly."
        }
      }
    }
  },
  "scripts": {
    "clean": "node -e \"require('node:fs').rmSync('dist', { recursive: true, force: true })\"",
    "build": "vite build && tsc -p tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "vitest run",
    "preview": "pnpm -C ../.. run vscode:preview",
    "preview:fast": "pnpm -C ../.. run vscode:preview:fast",
    "preview:reuse": "pnpm -C ../.. run vscode:preview:reuse"
  }
}
