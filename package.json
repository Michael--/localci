{
  "name": "localci",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "to be added",
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "clean": "pnpm -r --no-bail --if-present run clean",
    "gen": "pnpm -r --if-present run gen",
    "build": "pnpm -r --if-present run build",
    "test": "pnpm -r --if-present run test",
    "test:integration": "pnpm --filter @number10/ci-runner-smoke run test:integration",
    "lint": "pnpm -r --if-present run lint",
    "typecheck": "pnpm -r --if-present run typecheck",
    "check": "pnpm run lint && pnpm run typecheck && pnpm run test && pnpm run build",
    "check:release": "pnpm run check && pnpm run test:integration",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "spell": "cspell \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "smoke": "pnpm --filter @number10/ci-runner-smoke run smoke:json",
    "ci:self": "pnpm --filter @number10/ci-runner-cli run build && node --enable-source-maps packages/ci-runner-cli/dist/cli.js --config ci.config.json --cwd . --format pretty",
    "ci:self:watch": "pnpm --filter @number10/ci-runner-cli run build && node --enable-source-maps packages/ci-runner-cli/dist/cli.js --config ci.config.json --cwd . --format pretty --watch",
    "prepare": "husky",
    "ci": "pnpm run check && pnpm run smoke",
    "release:clean": "node -e \"require('node:fs').rmSync('.artifacts', { recursive: true, force: true })\"",
    "release:pack": "pnpm --filter @number10/ci-runner-cli pack --pack-destination .artifacts/packs",
    "release:dry-run": "pnpm run release:clean && pnpm run check:release && pnpm run release:pack",
    "docs:build": "pnpm -C docs-site build"
  },
  "keywords": [
    "electron",
    "typescript"
  ],
  "author": "Michael Rieck (Michael--) <mr@number10.de>",
  "license": "MIT",
  "engines": {
    "node": ">=20.19.0",
    "pnpm": ">=10.28.1"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "cspell": "^9.6.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "ts-proto": "^2.11.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
